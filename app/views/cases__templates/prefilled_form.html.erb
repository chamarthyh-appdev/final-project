<h1>
  Edit cases  #<%= @cases_.id %>
</h1>

<hr>

<%= render("cases__templates/validation_failures.html.erb") %>

<form action="/update_cases__record/<%= @cases_.id %>" method="post">
  <div>
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" value="<%= @cases_.title %>">
  </div>

  <div>
    <label for="difficulty">
      Difficulty
    </label>

    <input type="text" id="difficulty" name="difficulty" value="<%= @cases_.difficulty %>">
  </div>

  <div>
    <input id="is_brainstorm" name="is_brainstorm" type="checkbox" value="1" <%= "checked" if @cases_.is_brainstorm %>>
    <label for="is_brainstorm">
      Is brainstorm
    </label>
  </div>

  <div>
    <label for="num_exhibits">
      Num exhibits
    </label>

    <input type="text" id="num_exhibits" name="num_exhibits" value="<%= @cases_.num_exhibits %>">
  </div>

  <div>
    <label for="casebook_id">
      Casebook
    </label>

    <input type="text" id="casebook_id" name="casebook_id" value="<%= @cases_.casebook_id %>">
  </div>

  <div>
    <label for="is_math_heavy">
      Is math heavy
    </label>

    <input type="text" id="is_math_heavy" name="is_math_heavy" value="<%= @cases_.is_math_heavy %>">
  </div>

  <div>
    <label for="case_type">
      Case type
    </label>

    <input type="text" id="case_type" name="case_type" value="<%= @cases_.case_type %>">
  </div>

  <div>
    <label for="industry">
      Industry
    </label>

    <input type="text" id="industry" name="industry" value="<%= @cases_.industry %>">
  </div>

  <div>
    <input id="is_interviewer_led" name="is_interviewer_led" type="checkbox" value="1" <%= "checked" if @cases_.is_interviewer_led %>>
    <label for="is_interviewer_led">
      Is interviewer led
    </label>
  </div>

  <button>
    Update cases 
  </button>
</form>

<hr>

<a href="/cases_s">
  Go back
</a>
